
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
    ViewData["icon"] = "fa fa-list-alt";
    ViewData["url"] = "/admin/home";

}

<div id="tab-general">
    <div id="sum_box" class="row mbl">
        <div class="col-sm-12 col-md-4 col-lg-2 col-xl-2 block-space">
            <div class="panel income db mbm">
                <div class="panel-body">
                    <p class="icon">
                        <i class="icon fa fa-graduation-cap"></i>
                    </p>
                    <h4 class="value">
                        <span id="spTotalFaculties"></span>
                    </h4>
                    <p class="description">
                        Khoa
                    </p>
                </div>
            </div>
        </div>
        @*<div class="col-sm-4 col-md-2 col-xl-2 col-xxl-2">*@
        <div class="col-sm-12 col-md-4 col-lg-2 col-xl-2 block-space">
            <div class="panel visit db mbm">
                <div class="panel-body">
                    <p class="icon">
                        <i class="icon icon-users"></i>
                    </p>
                    <h4 class="value">
                        <span id="spTotalOfStudents"></span>
                    </h4>
                    <p class="description">
                        Sinh viên
                    </p>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-4 col-lg-2 col-xl-2 block-space">
            <div class="panel profit db mbm">
                <div class="panel-body">
                    <p class="icon">
                        <i class="icon fa fa-building-o" aria-hidden="true"></i>
                    </p>
                    <h4 class="value">
                        <span id="spTotalClasses"></span>
                    </h4>
                    <p class="description">
                        Lớp
                    </p>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-4 col-lg-2 col-xl-2 block-space">
            <div class="panel task db mbm">
                <div class="panel-body">
                    <p class="icon">
                        <i class="icon icon-users"></i>
                    </p>
                    <h4 class="value">
                        <span id="spTotalLecturers"></span>
                    </h4>
                    <p class="description">
                        Giảng viên
                    </p>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-4 col-lg-2 col-xl-2 block-space">
            <div class="panel income db mbm">
                <div class="panel-body">
                    <p class="icon">
                        <i class="icon fa fa-desktop" aria-hidden="true"></i>
                    </p>
                    <h4 class="value">
                        <span id="spActivePC"></span>
                    </h4>
                    <p class="description">
                        Máy tính hoạt động
                    </p>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-4 col-lg-2 col-xl-2 block-space">
            <div class="panel profit db mbm">
                <div class="panel-body">
                    <p class="icon">
                        <i class="icon fa fa-book" aria-hidden="true"></i>
                    </p>
                    <h4 class="value">
                        <span id="spTotalSubjects"></span>
                    </h4>
                    <p class="description">
                        Môn học
                    </p>
                </div>
            </div>
        </div>

    </div>

    <div class="row mbl">
        <div class="col-lg-12">
            <div class="portlet box">
                <div class="portlet-header">
                    <div class="caption">
                        Đặt phòng PC LAB gần đây
                    </div>
                </div>
                <div style="overflow: auto;" class="portlet-body table-responsive">
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered table-striped">
                            <thead>
                                <tr class="text-info">
                                    <th>#</th>
                                    <th>Phòng</th>
                                    <th>Môn học</th>
                                    <th>Giảng viên</th>
                                    <th>Tiết</th>
                                    <th>Bắt đầu</th>
                                    <th>Kết thúc</th>
                                    <th>Nhận xét</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody id="tblCalendars"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section scripts{

    <!--LOADING SCRIPTS FOR CHARTS-->
    <script src="~/assets/script/highcharts.js"></script>
    <script src="~/assets/script/data.js"></script>
    <script src="~/Assets/admin/summary.js"></script>


}

