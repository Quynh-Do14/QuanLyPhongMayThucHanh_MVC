
@{
    ViewBag.Title = "Quản lý môn học";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
    ViewData["icon"] = "fa fa-book";
    ViewData["url"] = "/admin/subject";
}

<div class="row">
    <div class="col-md-2 text-right">
        <button class="btn btn-success" data-toggle="modal" data-target="#subjectModal">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Thêm môn học mới
        </button>
    </div>
</div>


<div class="table-responsive">
    <table class="table table-hover-color">
        <thead>
            <tr>
                <th>#</th>
                <th>Kí hiệu</th>                
                <th>Tên môn</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="tblSubjects">  </tbody>
    </table>
</div>

<!-- Modal -->
<div id="subjectModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <form id="lecturerform">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title" id="modalTitle">Thêm môn học mới</h4>
                </div>
                <div class="modal-body">
                    <div class="row">                       
                        <div class="col-md-12 form-group">
                            <label>Tên môn học</label>
                            <input type="text" class="form-control" id="txtName" name="Nhập tên môn học" />
                        </div>
                    </div>                   
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" id="btnSubmit">Hoàn tất</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                </div>
            </form>
        </div>

    </div>
</div>



@section scripts{
    <script src="~/Assets/admin/subject.js"></script>
}

