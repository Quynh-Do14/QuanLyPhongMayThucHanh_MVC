
@{
    ViewBag.Title = "Lớp";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12 col-md-10 text-right">
        <div class="row">
            <div class="col-sm-12 col-md-6">
                <select class="form-control" id="slAllFaculties"></select>
            </div>
            <div class="col-sm-12 col-md-6">
                <div class="input-group">
                    <input type="text" class="form-control" id="txtKeyword" placeholder="Nhập tên lớp ...">
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-info" id="btnSearch">
                            <i class="fa fa-search" aria-hidden="true"></i>
                            Tìm kiếm...
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-12 col-md-2 text-right">
        <button class="btn btn-success" data-toggle="modal" data-target="#classroomModal">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Thêm mới
        </button>
    </div>
</div>



<div class="table-responsive" style="margin-top:15px;">
    <table class="table table-hover-color">
        <thead>
            <tr>
                <th>#</th>
                <th>Khoa</th>
                <th>Kí hiệu</th>
                <th>Tên</th>
                <th>Niên giám</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="tblClassrooms">  </tbody>
    </table>
</div>

<!-- Modal -->
<div id="classroomModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="modalTitle">Tạo lớp mới</h4>
            </div>
            <div class="modal-body">
                <div class="row">                   
                    <div class="col-md-6 form-group">
                        <label>Năm bắt đầu</label>
                        <select class="form-control" id="slFromYears"></select>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Năm kết thúc</label>
                        <select class="form-control" id="slToYears"></select>
                    </div>   
                </div>
                <div class="row">
                    <div class="col-md-12 form-group">
                        <label>Tên lớp</label>
                        <input type="text" class="form-control" id="txtName" placeholder="Tên lớp" />
                    </div>                                    
                </div>               
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnSubmit">Hoàn tất</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>

    </div>
</div>



@section scripts{
    <script src="~/Assets/admin/classroom.js"></script>
}





