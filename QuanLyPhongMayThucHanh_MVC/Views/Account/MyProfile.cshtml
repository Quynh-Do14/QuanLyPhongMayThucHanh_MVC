
@{
    ViewBag.Title = "Hồ sơ cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model QuanLyPhongMayThucHanh_MVC.Models.Lecturer


<link href="~/Assets/plugins/bootstrap-glyphicon/bootstrap-glyphicons.css" rel="stylesheet" />
<link href="~/Assets/plugins/bootstrap-datetimepicker/bootstrap-datetimepicker.min.css" rel="stylesheet" />


<div id="tab-general">
    <div class="row mbl">
       
        <div class="col-lg-12">


            <div class="row">
                <div class="col-md-12">
                    <h2>Người dùng: <span class="text-info fw-bold">@Model.fullname</span></h2>
                    <div class="row mtl">
                        <div class="col-md-3">
                            <div class="form-group">
                                <div class="text-center mbl"><img src="@Model.avatar" class="img-responsive"></div>
                                <div class="text-center mbl">
                                    <a href="#" class="btn btn-green">
                                        <i class="fa fa-upload"></i>&nbsp;
                                        Tải ảnh
                                    </a>
                                </div>
                            </div>
                            <table class="table table-striped table-hover">
                                <tbody>
                                    <tr>
                                        <td>Tên đăng nhập</td>
                                        <td class="fw-bold text-info">@Model.username</td>
                                    </tr>
                                    <tr>
                                        <td>Email</td>
                                        <td class="text-info">@Model.email</td>
                                    </tr>
                                    <tr>
                                        <td>Địa chỉ</td>
                                        <td>@Model.address</td>
                                    </tr>
                                    <tr>
                                        <td>Trạng thái</td>
                                        <td><span class="label label-success">Active</span></td>
                                    </tr>                                    
                                    <tr>
                                        <td>Là thành viên từ ngày</td>
                                        <td>@Model.created_at</td>
                                    </tr>
                                </tbody>
                            </table>
                            
                        </div>
                        <div class="col-md-9">                            
                            <div id="generalTabContent" class="tab-content">
                                <div id="tab-edit" class="tab-pane fade in active">
                                    <form action="#" class="form-horizontal">
                                        <h3>Thay đổi thông tin đăng nhập</h3>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Email</label>
                                            <div class="col-sm-9 controls">
                                                <div class="row">
                                                    <div class="col-xs-9"><input type="email" placeholder="youremail@yourcompany.com" value="@Model.email" class="form-control"></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Tên đăng nhập</label>
                                            <div class="col-sm-9 controls">
                                                <div class="row">
                                                    <div class="col-xs-9"><input type="text" placeholder="username" class="form-control" value="@Model.username"></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Mật khẩu</label>
                                            <div class="col-sm-9 controls">
                                                <div class="row">
                                                    <div class="col-xs-4"><input type="password" value="" placeholder="password" class="form-control"></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Nhập lại mật khẩu</label>
                                            <div class="col-sm-9 controls">
                                                <div class="row">
                                                    <div class="col-xs-4"><input type="password" value="" placeholder="password" class="form-control"></div>
                                                </div>
                                            </div>
                                        </div>
                                        <hr>
                                        <h3>Thay đổi hồ sơ cá nhân</h3>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Họ tên</label>
                                            <div class="col-sm-9 controls">
                                                <div class="row">
                                                    <div class="col-xs-9"><input type="text" placeholder="your full name" value="@Model.fullname" class="form-control"></div>
                                                </div>
                                            </div>
                                        </div>                                        
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Giới tính</label>
                                            <div class="col-sm-9 controls">
                                                <div class="row">
                                                    <div class="col-xs-9">
                                                        <select class="form-control">
                                                            <option value="1" @(Model.gender ? "selected='selected'" : "")>Male</option>
                                                            <option value="0" @(Model.gender ? "" : "selected='selected'")>Female</option>
                                                        </select>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Ngày sinh</label>
                                            <div class="col-sm-3 controls">
                                                <div class='input-group date' id='dtpBirthdate'>
                                                    <input type='text' class="form-control" value="@Model.birthdate"/>
                                                    <span class="input-group-addon">
                                                        <span class="glyphicon glyphicon-calendar"></span>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Địa chỉ</label>
                                            <div class="col-sm-9 controls">
                                                <div class="row">
                                                    <div class="col-xs-9"><input type="text" placeholder="your address" value="@Model.address" class="form-control"></div>
                                                </div>
                                            </div>
                                        </div>    

                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Tình trạng hôn nhân</label>
                                            <div class="col-sm-9 controls">
                                                <div class="row">
                                                    <div class="col-xs-4">
                                                        <select class="form-control">
                                                            <option value="1" @(Model.marital_status ? "selected='selected'" : "")>Đã kết hôn</option>
                                                            <option value="0" @(Model.marital_status ? "" : "selected='selected'")>Độc thân</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Khoa</label>
                                            <div class="col-sm-9 controls">
                                                <div class="row">
                                                    <div class="col-xs-4">
                                                        <select class="form-control">
                                                            <option>CEO</option>
                                                            <option>Director</option>
                                                            <option>Manager</option>
                                                            <option>Staff</option>
                                                            <option>Office Boy</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Chức vụ</label>
                                            <div class="col-sm-9 controls">
                                                <div class="row">
                                                    <div class="col-xs-4">
                                                        <select class="form-control">
                                                            <option>Trưởng khoa</option>
                                                            <option>Phó khoa</option>
                                                            <option>Giáo viên</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Thông tin</label>
                                            <div class="col-sm-9 controls">
                                                <div class="row">
                                                    <div class="col-xs-9"><textarea rows="3"  class="form-control">@Model.about</textarea></div>
                                                </div>
                                            </div>
                                        </div>
                                        <hr>
                                        <h3>Thay đổi thông tin liên lạc</h3>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Điện thoại cá nhân</label>
                                            <div class="col-sm-9 controls">
                                                <div class="row">
                                                    <div class="col-xs-9"><input type="text" value="@Model.phone" placeholder="mobile phone" class="form-control"></div>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Facebook</label>
                                            <div class="col-sm-9 controls">
                                                <div class="row">
                                                    <div class="col-xs-9"><input type="text" placeholder="facebook" class="form-control" value="@Model.facebook"></div>
                                                </div>
                                            </div>
                                        </div>                                        
                                        <hr>
                                        <button type="submit" class="btn btn-blue btn-block">Hoàn tất</button>
                                    </form>
                                </div>                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>




    </div>
</div>

@section scripts{

    <script src="~/Assets/plugins/bootstrap-datetimepicker/moment.min.js"></script>
    <script src="~/Assets/plugins/bootstrap-datetimepicker/bootstrap-datetimepicker.min.js"></script>    
}